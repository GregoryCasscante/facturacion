@model IEnumerable<FrontEnd.Models.CompaniaViewModel>

<title>Lista de Compañía</title>

<h1 class="mt-4">Compañías</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>


<p>
    @Html.ActionLink("Crear Nuevo", "Create", null, htmlAttributes: new { @class = "btn btn-dark" })
</p>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Lista de Compañías
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.actividad_economica)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cedula_juridica)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tipo_compania)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.telefono)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.nombre_contacto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.apellido1_contacto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.apellido2_contacto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.email_contacto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.direccion)
                    </th>
                    <th colspan="3"></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.actividad_economica)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cedula_juridica)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tipo_compania)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.telefono)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre_contacto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.apellido1_contacto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.apellido2_contacto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.email_contacto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.direccion)
                        </td>
                        <td align="center">
                            <a href="@Url.Action("Edit", "Compania", new { id = item.id })"><i class="fas fa-pencil-alt"></i></a>

                        </td>
                        <td align="center">

                            <a href="@Url.Action("Details", "Compania", new { id = item.id })"><i class="fas fa-eye"></i></a>

                        </td>
                        <td align="center">

                            <a href="@Url.Action("Delete", "Compania", new { id = item.id })"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

