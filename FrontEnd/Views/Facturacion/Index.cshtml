
@model FrontEnd.Models.FacturaViewModel

@{
    ViewBag.Title = "Facturación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    label.error {
        color: red !important;
    }

    .error {
        color: red !important;
    }

    input.error {
        background-color: #FFEBEE !important;
    }

</style>

<h2>Facturación</h2>

<div>
    <h4>Crear Factura</h4>
    <hr />

    <!--
     ######################################################################################################################
     # Formulario de Facturación
     #######################################################################################################################
     -->

    <form action="/Facturacion/Create" class="forms-sample" id="form-facturacion" nombre="form-facturacion" method="post">

        <input type="hidden" name="usuario" value="@Session["user.id"]" />
        <input type="hidden" name="tipo_comprobante" value="1" />
        <input type="hidden" name="monera" value="1" />
        <input type="hidden" name="moneda" value="1" />
        <input type="hidden" name="forma_de_pago" value="1" />



        <div class="form-row">

            <div class="col-lg-4 col-4">

                <div class="form-group">
                    <label for="cliente">Tipo de Comprobante</label>
                    <select class="form-control p-input" name="tipo_comprobante" id="tipo_comprobante">
                        @foreach (var item in Model.F_lista_Tipo_Comprobante)
                        {
                            <option value="@item.id">@item.Descripcion</option>
                        }
                    </select>
                </div>

            </div>
        </div>

        <div class="form-row">

            <div class="col-lg-4 col-4">

                <div class="form-group">
                    <label for="cliente">Emisor</label>
                    <select class="form-control p-input" name="compania" id="compania">
                        @foreach (var item in Model.F_lista_companias)
                        {
                            <option value="@item.id">@item.cedula_juridica - @item.nombre</option>
                        }
                    </select>
                </div>

            </div>

            <div class="col-lg-4 col-4">

                <div class="form-group">
                    <label for="cliente">Cliente</label>
                    <select class="form-control p-input" name="cliente" id="cliente">

                        @foreach (var item in Model.F_lista_clientes)
                        {
                            <option value="@item.id">@item.identificacion - @item.nombre</option>
                        }

                    </select>
                </div>
            </div>

            <div class="col-lg-4 col-4">

                <div class="form-group">
                    <label for="cliente">Condición Venta</label>
                    <select class="form-control p-input" name="condicion_venta" id="condicion_venta">

                        @foreach (var item in Model.F_lista_Condiciones_de_Venta)
                        {
                            <option value="@item.id">@item.id - @item.Description</option>
                        }

                    </select>
                </div>
            </div>

            <div class="col-lg-12 col-12"><hr /></div>



            <!-- end col 4 2 -->
            <!-- 01 -------------------------------------------------------------------------------->
            <!--  Linea Facturacion ------------------>
            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <label for="cliente">Articulo</label>
                    <select class="form-control p-input" name="producto1" id="producto1">
                        @foreach (var item in Model.F_lista_Productos)
                        {
                            <option value="@item.descripcion|@item.precio|@item.id">@item.descripcion - ₡@item.precio</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <label for="cliente">Precio</label>
                    <input type="text" class="form-control p-input" readonly name="precio1" id="precio1" placeholder="Precio" value="0">
                </div>
            </div>
            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <label for="cliente">Cantidad</label>
                    <input type="text" class="form-control p-input" pattern="\d*" name="cantidad1" id="cantidad1" placeholder="Cantidad" value="0">
                </div>
            </div>
            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <label for="cliente">Sub Total</label>
                    <input type="text" class="form-control p-input" readonly name="subtotal1" id="subtotal1" placeholder="Sub Total" value="0">
                </div>
            </div>
            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <label for="cliente">IVA</label>
                    <input type="text" class="form-control p-input" readonly name="iva1" id="iva1" placeholder="IVA" value="0">
                </div>
            </div>
            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <label for="cliente">Total</label>
                    <input type="text" class="form-control p-input" readonly name="ltotal1" id="ltotal1" placeholder="Total" value="0">
                </div>
            </div>

            <!-- 02 -------------------------------------------------------------------------------->
            <!--  Linea Facturacion ------------------>
            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <select class="form-control p-input" name="producto2" id="producto2">
                        @foreach (var item in Model.F_lista_Productos)
                        {
                            <option value="@item.descripcion|@item.precio|@item.id">@item.descripcion - ₡@item.precio</option>
                        }
                    </select>
                </div>
            </div>
            <!--
        <div class="col-lg-2 col-2 linea_factura">
            <div class="form-group linea_factura">
                <input type="text" class="form-control p-input" readonly name="descripcion2" id="descripcion2" placeholder="Descripción">
            </div>
        </div>
    -->
            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <input type="text" class="form-control p-input" readonly name="precio2" id="precio2" placeholder="Precio" value="0">
                </div>
            </div>
            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <input type="text" class="form-control p-input" name="cantidad2" pattern="\d*" id="cantidad2" placeholder="Cantidad" value="0">
                </div>
            </div>
            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <input type="text" class="form-control p-input" name="subtotal2" readonly id="subtotal2" placeholder="Sub Total" value="0">
                </div>
            </div>
            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <input type="text" class="form-control p-input" name="iva2" id="iva2" readonly pattern="\d*" placeholder="IVA" value="0">
                </div>
            </div>
            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <input type="text" class="form-control p-input" name="ltotal2" id="ltotal2" pattern="\d*" placeholder="Total" value="0">
                </div>
            </div>

            <!-- 03 -------------------------------------------------------------------------------->
            <!--  Linea Facturacion ------------------>
            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <select class="form-control p-input" name="producto3" id="producto3">
                        @foreach (var item in Model.F_lista_Productos)
                        {
                            <option value="@item.descripcion|@item.precio|@item.id">@item.descripcion - ₡@item.precio</option>
                        }
                    </select>
                </div>
            </div>
