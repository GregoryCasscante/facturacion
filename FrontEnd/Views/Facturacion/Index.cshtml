    <div class="col-lg-2 col-2 linea_factura">
        <div class="form-group linea_factura">
            <input type="text" class="form-control p-input" readonly name="descripcion3" id="descripcion3" placeholder="Descripción">
        </div>
    </div>
    -->
            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <input type="text" class="form-control p-input" readonly name="precio3" id="precio3" placeholder="Precio" value="0">
                </div>
            </div>
            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <input type="text" class="form-control p-input" name="cantidad3" pattern="\d*" id="cantidad3" placeholder="Cantidad" value="0">
                </div>
            </div>
            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <input type="text" class="form-control p-input" name="subtotal3" readonly id="subtotal3" placeholder="Sub Total" value="0">
                </div>
            </div>
            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <input type="text" class="form-control p-input" name="iva3" readonly id="iva3" placeholder="IVA" value="0">
                </div>
            </div>
            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <input type="text" class="form-control p-input" name="ltotal3" id="ltotal3" placeholder="Total" value="0">
                </div>
            </div>

            <!-- Sub Total -------------------------------------------------------------------------------->
            <div class="col-lg-10 col-10 linea_factura">
                <div class="form-group linea_factura" style="text-align: right; vertical-align: middle">
                    <div style="margin-top: 4px;"><span style="text-align: right ; vertical-align: middle"><strong>Sub Total:</strong></span></div>
                </div>
            </div>

            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <input type="text" class="form-control p-input" readonly name="subtotal" id="subtotal" placeholder="Sub Total" value="0">
                </div>
            </div>

            <!-- Iva -------------------------------------------------------------------------------->
            <div class="col-lg-10 col-10 linea_factura">
                <div class="form-group linea_factura" style="text-align: right; vertical-align: middle">
                    <div style="margin-top: 4px;"><span style="text-align: right ; vertical-align: middle"><strong>IVA:</strong></span></div>
                </div>
            </div>

            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <input type="text" class="form-control p-input" readonly name="iva" id="iva" placeholder="IVA" value="0">
                </div>
            </div>

            <!-- Total -------------------------------------------------------------------------------->
            <div class="col-lg-10 col-10 linea_factura">
                <div class="form-group linea_factura" style="text-align: right; vertical-align: middle">
                    <div style="margin-top: 4px;"><span style="text-align: right ; vertical-align: middle"><strong>Total:</strong></span></div>
                </div>
            </div>

            <div class="col-lg-2 col-2 linea_factura">
                <div class="form-group linea_factura">
                    <input type="text" class="form-control p-input" readonly name="total" id="total" placeholder="Total" value="0">
                </div>
            </div>



            <div class="col-lg-4 col-4">
                <div class="form-group ">
                    <label for="cliente">Notas</label>
                    <textarea class="form-control" id="notas" name="notas" rows="7"></textarea>
                </div>
            </div>

            <div class="col-lg-8 col-8">
                <div class="form-group ">
                </div>
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>


        </div>

</form>
</div>