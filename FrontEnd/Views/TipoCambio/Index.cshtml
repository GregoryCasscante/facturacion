@model IEnumerable<FrontEnd.Models.TipoCambioViewModel>

<title>Lista de Tipos de Cambio</title>

<h1 class="mt-4">Tipos de Cambio</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>


<p>
    @Html.ActionLink("Crear Nuevo", "Create", null, htmlAttributes: new { @class = "btn btn-dark" })
</p>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Lista de Tipos de Cambio
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.compra)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.venta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.fecha_actualizacion)
                    </th>
                    <th colspan="3"></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.compra)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.venta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fecha_actualizacion)
                        </td>
                        <td align="center">
                            <a href="@Url.Action("Edit", "TipoCambio", new { id = item.id })"><i class="fas fa-pencil-alt"></i></a>

                        </td>
                        <td align="center">

                            <a href="@Url.Action("Details", "TipoCambio", new { id = item.id })"><i class="fas fa-eye"></i></a>

                        </td>
                        <td align="center">

                            <a href="@Url.Action("Delete", "TipoCambio", new { id = item.id })"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
