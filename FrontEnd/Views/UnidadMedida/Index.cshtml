@model IEnumerable<FrontEnd.Models.UnidadMedidaViewModel>

<title>Lista de Unidades de Medida</title>

<h1 class="mt-4">Unidades de Medida</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>


<p>
    @Html.ActionLink("Crear Nuevo", "Create", null, htmlAttributes: new { @class = "btn btn-dark" })
</p>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Lista de Unidades de Medida
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.value)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.descripcion)
                    </th>
                    <th colspan="3"></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.value)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.descripcion)
                        </td>
                        <td align="center">
                            <a href="@Url.Action("Edit", "UnidadMedida", new { id = item.id })"><i class="fas fa-pencil-alt"></i></a>

                        </td>
                        <td align="center">

                            <a href="@Url.Action("Details", "UnidadMedida", new { id = item.id })"><i class="fas fa-eye"></i></a>

                        </td>
                        <td align="center">

                            <a href="@Url.Action("Delete", "UnidadMedida", new { id = item.id })"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
